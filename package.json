{
  "name": "resumeCompiler",
  "version": "1.0.0",
  "description": "Generate PDF resumes from structured data using Typst",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "tsx ./src/compiler/test/compileTestBlock.test.ts",
    "test:watch": "nodemon --watch src --watch template --ext ts,typ --ignore node_modules --ignore dist --exec 'pnpm test'"
  },
  "keywords": [
    "resume",
    "pdf",
    "typst",
    "cv",
    "generator"
  ],
  "author": "bouajila",
  "license": "ISC",
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "execa": "^9.6.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
