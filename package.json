{
  "name": "bouajila-resume-generator",
  "version": "1.2.0",
  "description": "Generate PDF resumes from structured data using Typst",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "tsx src/dev.ts",
    "dev:watch": "nodemon --watch src --watch types --ext ts,typ --exec 'pnpm run dev'",
    "docs": "pnpm --prefix docs start",
    "docs:build": "pnpm --prefix docs build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "resume",
    "pdf",
    "typst",
    "cv",
    "generator"
  ],
  "author": "bouajila",
  "license": "ISC",
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "execa": "^9.6.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/ui": "^4.0.18",
    "nodemon": "^3.1.11",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
