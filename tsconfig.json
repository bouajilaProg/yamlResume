{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "types/*": ["types/*"],
      "bin/*": ["bin/*"]
    }
  },
  "include": ["src", "bin", "types"],
  "exclude": ["node_modules", "dist"]
}
